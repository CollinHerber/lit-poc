{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:json/recommended",
    "plugin:storybook/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": [],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-else-return": "error",
    "prefer-object-has-own": "warn",
    "consistent-return": "warn",
    "guard-for-in": "warn",
    "object-curly-spacing": [
      "error",
      "always"
    ]
  },
  "overrides": [],
  "ignorePatterns": [
    "**/staticresources/**",
    "**/dist/**"
  ]
}
