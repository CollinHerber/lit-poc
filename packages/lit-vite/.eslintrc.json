{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:json/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": [],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-else-return": "error",
    "prefer-object-has-own": "warn",
    "consistent-return": "warn",
    "guard-for-in": "warn",
    "object-curly-spacing": ["error", "always"]
  },
  "overrides": [],
  "ignorePatterns": ["**/staticresources/**", "**/dist/**"]
}
